{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:prettier/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "prettier"
  ],
  "rules": {
    "no-var": "error",
    "indent": ["error", 2],
    "no-multi-spaces": "error",
    "prefer-const": "error",
    "no-undef": "off",
    "prettier/prettier": [
      2,
      {
        "bracketSpacing": true,
        "printWidth": 140,
        "singleQuote": false,
        "semi": true,
        "trailingComma": "none",
        "tabWidth": 2,
        "useTabs": false,
        "endOfLine": "auto"
      }
    ]
  }
}
